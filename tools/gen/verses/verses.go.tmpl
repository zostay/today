package {{.Package}}

import (
    "github.com/zostay/today/pkg/bible"
)

var Protestant = &bible.Canon{
    Name: "Protestant Canon",
    Books: []canon.Book{
{{- range .Books}}
        {
            Name: "{{.Name}}",
            JustVerse: {{if eq 0 (index .Verses 0 0)}}true{{else}}false{{end}},
            Verses: []bible.V{
{{range $i, $v := .Verses}}
{{- if eq 0 (index $v 0) -}}
                {V:{{index $v 1}}},
{{- else -}}
                {C:{{index $v 0}},V:{{index $v 1}}},
{{- end -}}
{{- if Mod (Add $i 1) 4}}
{{end}}
{{- end}}
            },
        },
{{- end}}
    },
    Categories: map[string][]string{
{{- range $k, $v := .Categories}}
        "{{ $k }}": {
{{- range $i, $s := $v}}
            "{{ $s }}",
{{- end }}
        },
{{- end }}
    },
}
