package ref

var Canonical = []Book{
{{- range .Books}}
    {
        Name: "{{.Name}}",
        JustVerse: {{if eq 0 (index .Verses 0 0)}}true{{else}}false{{end}},
        Verses: []VerseRef{
{{- range $i, $v := .Verses}}
{{- if eq 0 (index $v 0) -}}
            &JustVerse{ {{index $v 1}} },
{{- else -}}
            &ChapterVerse{ {{index $v 0}},{{index $v 1}} },
{{- end -}}
{{- if Mod $i 4}}
{{end}}
{{- end}}
        },
    },
{{- end}}
}
